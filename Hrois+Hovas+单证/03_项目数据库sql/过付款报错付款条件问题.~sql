SELECT TERMS_CODE,
       TERMS_DESC,
       PAY_NUM,
       PAY_ONE_RATE,
       PAY_ONE_METHOD,
       PAY_ONE_PERIOD,
       nvl(PAY_SECEND_RATE, 0.0) as PAY_SECEND_RATE,
       PAY_SECEND_METHOD,
       PAY_SECEND_PERIOD,
       PAY_THIRD_RATE,
       PAY_THIRD_METHOD,
       PAY_THIRD_PERIOD,
       PRIORITY,
       DOC_FLAG,
       ACTIVE_FLAG,
       CREATED_BY,
       CREATED,
       LAST_UPD_BY,
       LAST_UPD,
       MODIFICATION_NUM
  FROM CD_PAYMENT_TERMS
 WHERE TERMS_CODE = '6842'
